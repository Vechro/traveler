---
import Layout from "../layouts/Layout.astro";
---

<script>
  import { GoTrueClient } from "@supabase/gotrue-js";
  import "@vechro/turtle";

  interface FormShape {
    email: string;
    password: string;
  }

  const apiUrl = "http://localhost:8000";
  const apiAnon =
    "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyAgCiAgICAicm9sZSI6ICJhbm9uIiwKICAgICJpc3MiOiAic3VwYWJhc2UtZGVtbyIsCiAgICAiaWF0IjogMTY0MTc2OTIwMCwKICAgICJleHAiOiAxNzk5NTM1NjAwCn0.dc_X5iR_VP_qT0zsiyj_I_OZ2T9FtRU2BBNWN8Bu4GE";

  const auth = new GoTrueClient({
    url: `${apiUrl}/auth/v1`,
    headers: {
      accept: "json",
      apikey: apiAnon,
    },
  });

  const form = document.querySelector("form")!;

  const signInUser = async (event: SubmitEvent) => {
    event.preventDefault();
    const formData = new FormData(form);

    const formResult = Object.fromEntries(
      formData.entries()
    ) as unknown as FormShape;

    const { data, error } = await auth.signInWithPassword({
      email: formResult.email,
      password: formResult.password,
    });

    if (error) {
      console.error(`Login failed: ${error.message}`);
    } else {
      console.log(`Login successful: ${data}`);
    }
  };

  form.addEventListener("submit", signInUser);
</script>
<Layout title="Sign in">
  <main>
    <form>
      <menu-panel>
        <h1 slot="header">Sign in</h1>
        <div class="content">
          <div class="form-group">
            <label slot="label" for="email">Email</label>
            <input type="email" name="email" />
          </div>
          <div class="form-group">
            <label slot="label" for="password">Password</label>
            <input type="password" name="password" />
          </div>
        </div>
        <div slot="footer"><button>Sign in</button></div>
      </menu-panel>
    </form>
  </main>
</Layout>
<style>
  h1 {
    margin-block: 0;
    padding: 1.5rem;
  }
  main {
    color: var(--background-color);
    display: grid;
    min-height: 75vh;
  }
  form {
    place-self: center;
    width: 70ch;
  }
  .content {
    display: flex;
    flex-direction: column;
    margin: 1rem;
    gap: 0.5rem;
    min-height: 20rem;
  }
  .form-group {
    display: flex;
    flex-direction: column;
  }
</style>
